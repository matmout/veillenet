@page
@model IndexModel
@{
    ViewData["Title"] = "Votre dose quotidienne de C#";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center mb-3">
                <i class="bi bi-braces"></i> Contain<span class="text-primary">('</span><span class="text-primary fw-bold"><img src="~/icons/containsharp.svg" alt="ContainSharp" width="64" height="64" class="rounded" /></span><span class="text-primary">')</span>
            </h1>
            <p class="lead text-center text-muted">
                Votre dose quotidienne de C# - Blogs, Releases, Tendances GitHub, Outils IA
            </p>
        </div>
    </div>

    <!-- Release News Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-megaphone"></i> Nouveautés des Releases
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var release in Model.ReleaseNews)
                        {
                            <div class="col-md-6 col-lg-3 mb-3">
                                <div class="card h-100 border-0 bg-light">
                                    <div class="card-body">
                                        <span class="badge bg-@(release.Type == "Stable" ? "success" : release.Type == "Preview" ? "info" : "warning") mb-2">
                                            @release.Type
                                        </span>
                                        <h5 class="card-title">@release.Version</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">@release.Title</h6>
                                        <p class="card-text small">@release.Description</p>
                                        <p class="text-muted small mb-2">
                                            <i class="bi bi-calendar"></i> @release.ReleaseDate.ToString("dd MMM yyyy")
                                        </p>
                                        <a href="@release.Url" target="_blank" class="btn btn-sm btn-outline-primary">
                                            En savoir plus <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI News Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-robot"></i> Agent de Code - Actualités IA
                    </h2>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.AINews.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var news in Model.AINews.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@news.Url" target="_blank" class="text-decoration-none">
                                                @news.Title
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-1 small text-muted">@(news.Summary.Length > 0 ? news.Summary.Substring(0, Math.Min(150, news.Summary.Length)) : "")@(news.Summary.Length > 150 ? "..." : "")</p>
                                    <small class="text-muted">
                                        <i class="bi bi-tag"></i> @news.Source | 
                                        <i class="bi bi-calendar"></i> @news.PublishedDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chargement des actualités IA...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- WinForm News Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-window-desktop"></i> C# WinForms - Actualités
                    </h2>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.WinFormNews.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var news in Model.WinFormNews.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@news.Url" target="_blank" class="text-decoration-none">
                                                @news.Title
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-1 small text-muted">@(news.Summary.Length > 0 ? news.Summary.Substring(0, Math.Min(150, news.Summary.Length)) : "")@(news.Summary.Length > 150 ? "..." : "")</p>
                                    <small class="text-muted">
                                        <span class="badge bg-@(news.Category == "Microsoft" ? "primary" : "secondary")">@news.Category</span> 
                                        <i class="bi bi-tag"></i> @news.Source | 
                                        <i class="bi bi-calendar"></i> @news.PublishedDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chargement des actualités WinForms...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Blog Posts Section -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-rss"></i> Blogs .NET Officiels
                    </h2>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (Model.BlogPosts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var post in Model.BlogPosts.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@post.Url" target="_blank" class="text-decoration-none">
                                                @post.Title
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-1 small text-muted">@post.Summary.Substring(0, Math.Min(150, post.Summary.Length))@(post.Summary.Length > 150 ? "..." : "")</p>
                                    <small class="text-muted">
                                        <i class="bi bi-person"></i> @post.Author | 
                                        <i class="bi bi-tag"></i> @post.Source | 
                                        <i class="bi bi-calendar"></i> @post.PublishedDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chargement des articles...</p>
                    }
                </div>
            </div>
        </div>

        <!-- GitHub Trending Section -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-github"></i> Tendances GitHub - C#
                    </h2>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (Model.TrendingProjects.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var project in Model.TrendingProjects)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@project.Url" target="_blank" class="text-decoration-none">
                                                @project.FullName
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-2 small">@project.Description</p>
                                    <div class="d-flex gap-3">
                                        <small class="text-warning">
                                            <i class="bi bi-star-fill"></i> @project.Stars.ToString("N0")
                                        </small>
                                        <small class="text-info">
                                            <i class="bi bi-diagram-2"></i> @project.Forks.ToString("N0")
                                        </small>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> @project.UpdatedAt.ToString("dd MMM yyyy")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chargement des projets...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm bg-light">
                <div class="card-body text-center py-4">
                    <h3 class="mb-3">
                        <i class="bi bi-envelope"></i> Newsletter Personnalisée
                    </h3>
                    <p class="mb-3">Recevez les dernières actualités .NET directement dans votre boîte mail</p>
                    <a href="/Newsletter" class="btn btn-primary btn-lg">
                        S'abonner à la Newsletter <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

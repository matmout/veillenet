@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Description"] = "ContainSharp Dashboard - Your daily C# news hub. Track latest .NET releases, AI coding tools, WinForms updates, official blogs, GitHub trending projects and C# video tutorials.";
    ViewData["CanonicalUrl"] = "https://containsharp.com/";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center mb-3">
                <i class="bi bi-braces"></i> Contain<span class="text-primary">('</span><span class="text-primary fw-bold"><img src="~/icons/containsharp.svg" alt="ContainSharp Logo" width="64" height="64" class="rounded" loading="lazy" /></span><span class="text-primary">')</span>
            </h1>
            <p class="lead text-center text-muted">
                Your daily dose of C# - Official blogs, Releases, GitHub Trends, AI tools
            </p>
        </div>
    </div>

    <!-- Output Window Simulation (Visual Studio style) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm vs-output">
                <div class="output-titlebar">
                    <div class="controls">
                        <span class="dot close"></span>
                        <span class="dot min"></span>
                        <span class="dot max"></span>
                    </div>
                    <div class="title">Output — Build</div>
                    <div class="spacer"></div>
                </div>
                <div class="output-toolbar">
                    <div class="chip">Show output from: Build</div>
                    <div class="chip">Encoding: UTF-8</div>
                </div>
                <div id="output-stream" class="output-stream" aria-live="polite"></div>
            </div>
        </div>
    </div>

    <!-- Release News Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-megaphone"></i> Release News
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var release in Model.ReleaseNews)
                        {
                            <div class="col-md-6 col-lg-3 mb-3">
                                <div class="card h-100 border-0 bg-light">
                                    <div class="card-body">
                                        <span class="badge bg-@(release.Type == "Stable" ? "success" : release.Type == "Preview" ? "info" : "warning") mb-2">
                                            @release.Type
                                        </span>
                                        <h5 class="card-title">@release.Version</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">@release.Title</h6>
                                        <p class="card-text small">@release.Description</p>
                                        <p class="text-muted small mb-2">
                                            <i class="bi bi-calendar"></i> @release.ReleaseDate.ToString("dd MMM yyyy")
                                        </p>
                                        <a href="@release.Url" target="_blank" class="btn btn-sm btn-outline-primary">
                                        Learn more <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI News Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-robot"></i> Coding Agents - AI News
                    </h2>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.AINews.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var news in Model.AINews.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@news.Url" target="_blank" class="text-decoration-none">
                                                @news.Title
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-1 small text-muted">@(news.Summary.Length > 0 ? news.Summary.Substring(0, Math.Min(150, news.Summary.Length)) : "")@(news.Summary.Length > 150 ? "..." : "")</p>
                                    <small class="text-muted">
                                        <i class="bi bi-tag"></i> @news.Source | 
                                        <i class="bi bi-calendar"></i> @news.PublishedDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Loading AI news...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- WinForm News Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-window-desktop"></i> C# WinForms - News
                    </h2>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.WinFormNews.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var news in Model.WinFormNews.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@news.Url" target="_blank" class="text-decoration-none">
                                                @news.Title
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-1 small text-muted">@(news.Summary.Length > 0 ? news.Summary.Substring(0, Math.Min(150, news.Summary.Length)) : "")@(news.Summary.Length > 150 ? "..." : "")</p>
                                    <small class="text-muted">
                                        <span class="badge bg-@(news.Category == "Microsoft" ? "primary" : "secondary")">@news.Category</span> 
                                        <i class="bi bi-tag"></i> @news.Source | 
                                        <i class="bi bi-calendar"></i> @news.PublishedDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Loading WinForms news...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- C# Videos Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-play-circle"></i> New C# Videos
                    </h2>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.Videos.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var video in Model.Videos.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        @if (!string.IsNullOrEmpty(video.Thumbnail))
                                        {
                                            <div class="me-3">
                                                <img src="@video.Thumbnail" alt="@video.Title" style="width: 120px; height: 90px; object-fit: cover; border-radius: 4px;" />
                                            </div>
                                        }
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="@video.Url" target="_blank" class="text-decoration-none">
                                                    @video.Title
                                                </a>
                                            </h6>
                                            <p class="mb-1 small text-muted">@(video.Description.Length > 0 ? video.Description.Substring(0, Math.Min(150, video.Description.Length)) : "")@(video.Description.Length > 150 ? "..." : "")</p>
                                            <small class="text-muted">
                                                <i class="bi bi-camera-video"></i> @video.Channel | 
                                                <i class="bi bi-calendar"></i> @video.PublishedDate.ToString("dd MMM yyyy")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Loading videos...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Blog Posts Section -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-rss"></i> Official .NET Blogs
                    </h2>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (Model.BlogPosts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var post in Model.BlogPosts.Take(10))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@post.Url" target="_blank" class="text-decoration-none">
                                                @post.Title
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-1 small text-muted">@post.Summary.Substring(0, Math.Min(150, post.Summary.Length))@(post.Summary.Length > 150 ? "..." : "")</p>
                                    <small class="text-muted">
                                        <i class="bi bi-person"></i> @post.Author | 
                                        <i class="bi bi-tag"></i> @post.Source | 
                                        <i class="bi bi-calendar"></i> @post.PublishedDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Loading posts...</p>
                    }
                </div>
            </div>
        </div>

        <!-- GitHub Trending Section -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-github"></i> Tendances GitHub - C#
                    </h2>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (Model.TrendingProjects.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var project in Model.TrendingProjects)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@project.Url" target="_blank" class="text-decoration-none">
                                                @project.FullName
                                            </a>
                                        </h6>
                                    </div>
                                    <p class="mb-2 small">@project.Description</p>
                                    <div class="d-flex gap-3">
                                        <small class="text-warning">
                                            <i class="bi bi-star-fill"></i> @project.Stars.ToString("N0")
                                        </small>
                                        <small class="text-info">
                                            <i class="bi bi-diagram-2"></i> @project.Forks.ToString("N0")
                                        </small>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> @project.UpdatedAt.ToString("dd MMM yyyy")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chargement des projets...</p>
                    }
                </div>
            </div>
        </div>
    </div>


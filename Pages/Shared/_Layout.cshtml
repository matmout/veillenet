<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] != null ? ViewData["Title"] + " - Contain('Sharp')" : "Contain('Sharp') - Your daily dose of C#")</title>
    <meta name="description" content="@(ViewData["Description"] ?? "ContainSharp - Your daily dose of C#. Stay updated with official .NET blogs, releases, GitHub trends, AI tools, and essential resources for C# developers.")" />
    <meta name="keywords" content="C#, .NET, ASP.NET, Visual Studio, GitHub, AI tools, WinForms, development, programming" />
    <meta name="author" content="ContainSharp" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@(ViewData["CanonicalUrl"] ?? "https://containsharp.com")" />
    <meta property="og:title" content="@(ViewData["Title"] != null ? ViewData["Title"] + " - Contain('Sharp')" : "Contain('Sharp') - Your daily dose of C#")" />
    <meta property="og:description" content="@(ViewData["Description"] ?? "ContainSharp - Your daily dose of C#. Stay updated with official .NET blogs, releases, GitHub trends, AI tools, and essential resources for C# developers.")" />
    <meta property="og:image" content="https://containsharp.com/icons/containsharp.png" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="@(ViewData["CanonicalUrl"] ?? "https://containsharp.com")" />
    <meta property="twitter:title" content="@(ViewData["Title"] != null ? ViewData["Title"] + " - Contain('Sharp')" : "Contain('Sharp') - Your daily dose of C#")" />
    <meta property="twitter:description" content="@(ViewData["Description"] ?? "ContainSharp - Your daily dose of C#. Stay updated with official .NET blogs, releases, GitHub trends, AI tools, and essential resources for C# developers.")" />
    <meta property="twitter:image" content="https://containsharp.com/icons/containsharp.png" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="@(ViewData["CanonicalUrl"] ?? "https://containsharp.com")" />
    <link rel="icon" type="image/svg+xml" href="~/icons/containsharp.svg" />
    <link rel="alternate icon" type="image/png" href="~/icons/containsharp.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <i class="bi bi-braces"></i> Contain<span class="text-warning">(' </span><span class="text-light">S</span>harp<span class="text-warning"> ')</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">
                                <i class="bi bi-house"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Liens">
                                <i class="bi bi-link-45deg"></i> Links
                            </a>
                        </li>
@*                         <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Newsletter">
                                <i class="bi bi-envelope"></i> Newsletter
                            </a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; 2025 - <strong>Contain (' Sharp ')</strong> - Your daily dose of C#
                </div>
                <div class="col-md-6 text-end">
                    <a href="https://github.com/matmout/veillenet" target="_blank" class="text-decoration-none">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] != null ? ViewData["Title"] + " - Contain('Sharp')" : "Contain('Sharp') - Your daily dose of C#")</title>
    <meta name="description" content="@(ViewData["Description"] ?? "ContainSharp - Your daily dose of C#. Stay updated with official .NET blogs, releases, GitHub trends, AI tools, and essential resources for C# developers.")" />
    <meta name="keywords" content="C#, .NET, ASP.NET, Visual Studio, GitHub, AI tools, WinForms, development, programming" />
    <meta name="author" content="ContainSharp" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@(ViewData["CanonicalUrl"] ?? "https://containsharp.com")" />
    <meta property="og:title" content="@(ViewData["Title"] != null ? ViewData["Title"] + " - Contain('Sharp')" : "Contain('Sharp') - Your daily dose of C#")" />
    <meta property="og:description" content="@(ViewData["Description"] ?? "ContainSharp - Your daily dose of C#. Stay updated with official .NET blogs, releases, GitHub trends, AI tools, and essential resources for C# developers.")" />
    <meta property="og:image" content="https://containsharp.com/icons/containsharp.png" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="@(ViewData["CanonicalUrl"] ?? "https://containsharp.com")" />
    <meta property="twitter:title" content="@(ViewData["Title"] != null ? ViewData["Title"] + " - Contain('Sharp')" : "Contain('Sharp') - Your daily dose of C#")" />
    <meta property="twitter:description" content="@(ViewData["Description"] ?? "ContainSharp - Your daily dose of C#. Stay updated with official .NET blogs, releases, GitHub trends, AI tools, and essential resources for C# developers.")" />
    <meta property="twitter:image" content="https://containsharp.com/icons/containsharp.png" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="@(ViewData["CanonicalUrl"] ?? "https://containsharp.com")" />
    <link rel="icon" type="image/svg+xml" href="~/icons/containsharp.svg" />
    <link rel="alternate icon" type="image/png" href="~/icons/containsharp.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/scrollbar.css" asp-append-version="true" />
</head>
<body>
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <header role="banner">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3" role="navigation" aria-label="Main navigation">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index" aria-label="ContainSharp - Home">
                    Contain<span class="text-primary">('</span><span class="text-primary fw-bold"><img src="~/icons/containsharp.svg" alt="ContainSharp Logo" width="34" height="34" class="rounded" loading="lazy" /></span><span class="text-primary">')</span>
                  @*   <i class="bi bi-braces" aria-hidden="true"></i> Contain<span class="text-warning">(' </span><span class="text-light">S</span>harp<span class="text-warning"> ')</span> *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation menu">
                    <span class="navbar-toggler-icon" aria-hidden="true"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1" role="menubar" aria-label="Site navigation">
                        <li class="nav-item" role="none">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index" role="menuitem" aria-label="Dashboard - Home page">
                                <i class="bi bi-house" aria-hidden="true"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link text-white" asp-area="" asp-page="/Liens" role="menuitem" aria-label="Useful Links - Developer resources">
                                <i class="bi bi-link-45deg" aria-hidden="true"></i> Links
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link text-white" asp-area="" asp-page="/MCP" role="menuitem" aria-label="MCP Tools - Model Context Protocol servers">
                                <i class="bi bi-plugin" aria-hidden="true"></i> MCP
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link text-white" asp-area="" asp-page="/LatestLLM" role="menuitem" aria-label="Latest LLM - Large Language Models">
                                <i class="bi bi-cpu" aria-hidden="true"></i> LLM
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link text-white" asp-area="" asp-page="/Training" role="menuitem" aria-label="Training - Test your C# knowledge">
                                <i class="bi bi-mortarboard" aria-hidden="true"></i> Training
                            </a>
                        </li>
@*                         <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Newsletter">
                                <i class="bi bi-envelope"></i> Newsletter
                            </a>
                        </li> *@
                    </ul>
                </div>
                <!-- Dev typing animation -->
                <div class="dev-typer" aria-hidden="true">
                    <div class="dev">
                        <div class="dev-head"></div>
                        <div class="dev-body">
                            <div class="dev-screen"></div>
                            <div class="dev-hands">
                                <div class="dev-hand left"></div>
                                <div class="dev-hand right"></div>
                            </div>
                            <div class="dev-keyboard"></div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3" id="main-content" tabindex="-1" aria-label="Main content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5" role="contentinfo" aria-label="Site footer">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; 2025 - <strong>Contain (' Sharp ')</strong> - Your daily dose of C#
                </div>
                <div class="col-md-6 text-end">
                    <a href="https://github.com/matmout/veillenet" target="_blank" rel="noopener noreferrer" class="text-decoration-none" aria-label="View source code on GitHub (opens in new tab)">
                        <i class="bi bi-github" aria-hidden="true"></i> GitHub
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>